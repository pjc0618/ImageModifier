# Image Panel
<ImagePanel>:
    size: 528*sp(1), 528*sp(1)
    inside: 512*sp(1), 512*sp(1)
    canvas:
        Color:
            rgb: 1, 1, 1
        
        BorderImage:
            source: self.getResource('im_border.png')
            pos: self.x, self.y
            size: self.width, self.height
            border: 20, 20, 20, 20
            display_border: 10*sp(1), 10*sp(1), 10*sp(1), 10*sp(1)
        
        Rectangle:
            size: root.imagesize
            pos:  root.pos[0]+root.imageoff[0], root.pos[1]+root.imageoff[1]
            texture: root.texture




# Primary Panel
<FilterPanel>:
    orientation: 'vertical'
    origimage: original
    workimage: current
    progress:  progress
    menubar:   menubar
    size: 1024*sp(1), 569*sp(1)
    
    BoxLayout:
        id: menubar
        orientation: 'horizontal'
        size_hint: 1, 0.05
        
        Button:
            text: 'File...'
            on_release: root.filedrop.open(self)
        
        Button:
            text: 'Restore...'
            on_release: root.editdrop.open(self)
        
        Button:
            text: 'Invert'
            on_release: root.do_async('invert')
        
        Button:
            text: 'Transpose'
            on_release: root.do_async('transpose')
        
        Button:
            text: 'Rotate...'
            on_release: root.turndrop.open(self)
        
        Button:
            text: 'Reflect..'
            on_release: root.axisdrop.open(self)
        
        Button:
            text: 'Mono...'
            on_release: root.greydrop.open(self)
        
        Button:
            text: 'Vignette'
            on_release: root.do_async('vignette')
        
        Button:
            text: 'Jail'
            on_release: root.do_async('jail')
        
        Button:
            text: 'Pixelate'
            on_release: root.blockdrop.open(self)
    
    ProgressBar:
        id: progress
        width: root.size[0]
        size_hint: 1, 0.05
        max:   500
        value: 500
    
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 0.9
        
        ImagePanel:
            id: original
            size_hint: None, None
        
        ImagePanel:
            id: current
            size_hint: None, None
